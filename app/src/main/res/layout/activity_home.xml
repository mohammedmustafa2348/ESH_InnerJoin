<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fblogin.HomeActivity"
    android:background="#f9f7f7">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton3"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/match"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton4"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/message"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton5"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/new_message" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="208dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profileImage"
                android:layout_alignParentTop="true"
                android:visibility="visible"
                android:src="@drawable/mypic"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="0.12">


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:background="#dad9d9">

            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Name, Age"
                android:id="@+id/txtProfileInfo"
                android:layout_weight="0.59"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/imageButton"
                android:layout_marginTop="5dp"
                android:src="@drawable/checkmark"
                android:layout_weight="0.08"
                android:layout_marginLeft="15dp" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/imageButton2"
                android:layout_weight="0.08"
                android:layout_marginTop="5dp"
                android:src="@drawable/xmark"
                android:layout_marginLeft="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.52"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="About Me"
                android:id="@+id/lblAboutMeCaption"
                android:textStyle="bold"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lblAboutMe" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Interests"
                android:id="@+id/lblInterests"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
