<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fblogin.PreferenceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your preferences and interests."
        android:id="@+id/textTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="@color/com_facebook_button_background_color_pressed"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textTitle"
        android:layout_marginTop="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fdfcfc">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegan"
            android:id="@+id/veganOpt"
            android:checked="false"
            android:textColor="#04550b" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Football"
            android:id="@+id/footbalOpt"
            android:layout_gravity="right"
            android:checked="false"
            android:textColor="#041055" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rock"
            android:id="@+id/rockOpt"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textColor="#cb3507" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegetarian"
            android:id="@+id/vegOpt"
            android:checked="false"
            android:textColor="#04550b"
            android:capitalize="words" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sushi"
            android:id="@+id/sushiOpt"
            android:layout_gravity="right"
            android:checked="false"
            android:textColor="#cb3507" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Innebandy"
            android:id="@+id/innebandyOpt"
            android:checked="false"
            android:textColor="#086166" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LGBT"
            android:id="@+id/lgbtOpt"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textColor="#041055" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cats"
            android:id="@+id/catsOpt"
            android:layout_gravity="right"
            android:checked="false"
            android:textColor="#ec86b0" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Christianitty"
            android:id="@+id/christOpt"
            android:checked="false"
            android:textColor="#7c0572" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dogs"
            android:id="@+id/dogsOpt"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textColor="#ec86b0" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Non-Vegetarian"
            android:id="@+id/switch10"
            android:layout_gravity="right"
            android:checked="false"
            android:textColor="#041055" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Athiest"
            android:id="@+id/athiestOpt"
            android:checked="false"
            android:textColor="#041055" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pop"
            android:id="@+id/popOpt"
            android:layout_gravity="right"
            android:checked="false"
            android:textColor="#086166" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Islam"
            android:id="@+id/islamOpt"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textColor="#7c0572" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go"
            android:id="@+id/btnGo"
            android:layout_gravity="right" />

    </LinearLayout>

</RelativeLayout>
